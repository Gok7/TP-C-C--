#include <stdio.h>
#include <conio.h>

long fac(int n){
        long res;
        printf("***entree dans fac %d\n",n);
        if(n>1) res = fac(n-1)*n;
        else res=1;
        printf("***sortie de fac %ld\n",res);
        return(res);
}

int main(int argc, char** argv) {

        printf("%ld %ld %ld",fac(3),fac(6),fac(1));

	getch();
}


