#include <stdio.h>
#include <conio.h>
#include <limits.h>
                  //long max : 2 147 483 647

void appel(){
        long fois;
        long i=0;
        for(i=0;i<LONG_MAX-1;i++){
                switch(i){
                        case 10 : printf("appel 10\n");
                        break;
                        case 100 : printf("appel 100\n");
                        break;
                        case 1000 : printf("appel 1000\n");
                        break;
                        case 10000 : printf("appel 10000\n");
                        break;
                        case 100000 : printf("appel 100000\n");
                        break;
                        case 1000000 : printf("appel 1000000\n");
                        break;
                        case 10000000 : printf("appel 10000000\n");
                        break;
                        case 100000000 : printf("appel 100000000\n");
                        break;
                        case 1000000000 : printf("appel 1000000000\n");
                        i=LONG_MAX-1;
                }
        }
}

int main(int argc, char** argv) {

        appel();     printf("FIN ! ");

	getch();
}

 
