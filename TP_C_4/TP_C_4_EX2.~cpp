#include <stdio.h>
#include <conio.h>

void main()
{
        float note=1,somme,moyenne;
        int i;
        somme=0;
        i=1;
        printf("Bonjour entrez les notes voulu et tapez -1 pour arreter\n");
        do
        {

                printf("Note %d :",i);
                scanf("%f",&note);
                i++;
                if(note>=0){
                        somme=somme+note;
        }
        }while(note>=0);
                i=i-2;
                moyenne=somme/i;
                printf("Moyenne de ces %d notes : %5.2f",i,moyenne);
        getch();
}


